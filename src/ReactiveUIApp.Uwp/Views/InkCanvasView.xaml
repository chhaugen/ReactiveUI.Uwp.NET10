<local:ReactiveInkCanvasView
    x:Class="ReactiveUIApp.Uwp.Views.InkCanvasView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ReactiveUIApp.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:ReactiveUIApp.Core.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:InkCanvasViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="1"
                BorderBrush="Gray"
                BorderThickness="1">
                <InkToolbar x:Name="inkToolbar" TargetInkCanvas="{x:Bind inkCanvas}" />
                <Grid
                    Width="800"
                    Height="300"
                    Background="{ThemeResource SystemControlBackgroundChromeWhiteBrush}">
                    <InkCanvas x:Name="inkCanvas" />
                </Grid>
            </StackPanel>
            <CommandBar Grid.Row="2" OverflowButtonVisibility="Collapsed">
                <AppBarButton
                    x:Name="saveButton"
                    Icon="Save"
                    Label="Save" />
                <AppBarButton
                    x:Name="openButton"
                    Icon="OpenFile"
                    Label="Open" />
            </CommandBar>
        </Grid>

    </Grid>
</local:ReactiveInkCanvasView>
