<local:ReactiveShellView
    x:Class="ReactiveUIApp.Uwp.Views.ShellView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ReactiveUIApp.Uwp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:rxui="using:ReactiveUI"
    xmlns:viewmodels="using:ReactiveUIApp.Core.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ShellViewModel}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar" Background="Transparent">
            <!--  Width of the padding columns is set in LayoutMetricsChanged handler.  -->
            <!--
                Using padding columns instead of Margin ensures that the background
                paints the area under the caption control buttons (for transparent buttons).
            -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                <ColumnDefinition />
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <FontIcon
                    Margin="16,0,0,0"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="16"
                    Glyph="&#xE76E;" />
                <TextBlock
                    x:Name="AppTitleTextBlock"
                    Grid.Column="1"
                    Margin="16,0,0,0"
                    Style="{StaticResource CaptionTextBlockStyle}"
                    Text="Reactive UI Sample App" />
            </StackPanel>

            <!--<Image
                Grid.Column="1"
                Width="16"
                Height="16"
                Margin="8,0,0,0"
                HorizontalAlignment="Left"
                Source="Assets/WindowIcon.png" />-->
        </Grid>
        <muxc:NavigationView
            x:Name="navigationView"
            Grid.Row="1"
            IsSettingsVisible="False"
            PaneDisplayMode="Top">
            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem
                    x:Name="smileNavigationViewItem"
                    Content="Smile"
                    Icon="Emoji2" />
                <muxc:NavigationViewItem x:Name="inkCanvasNavigationViewItem" Content="Ink Canvas">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE790;" />
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>
            <rxui:RoutedViewHost x:Name="routedViewHost" />
        </muxc:NavigationView>
    </Grid>

</local:ReactiveShellView>
